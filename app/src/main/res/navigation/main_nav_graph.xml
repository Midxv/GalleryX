<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/initialFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.app.galleryx.settings.ui.SettingsFragment"
        android:label="SettingsFragment">
        <action
            android:id="@+id/action_settingsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
        <action
            android:id="@+id/action_settingsFragment_to_creditsFragment"
            app:destination="@id/creditsFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.app.galleryx.settings.ui.AboutFragment"
        android:label="AboutFragment">
        <action
            android:id="@+id/action_aboutFragment_to_ossLicensesFragment"
            app:destination="@id/ossLicensesFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right" />
    </fragment>

    <fragment
        android:id="@+id/setupFragment"
        android:name="com.app.galleryx.setup.ui.SetupFragment"
        android:label="fragment_setup"
        tools:layout="@layout/fragment_setup">
        <action
            android:id="@+id/action_setupFragment_to_galleryFragment"
            app:destination="@id/albumsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/setupFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_setupFragment_to_encryptionMigrationFragment"
            app:destination="@id/encryptionMigrationFragment"
            app:popUpTo="@id/settingsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/unlockFragment"
        android:name="com.app.galleryx.unlock.ui.UnlockFragment"
        android:label="fragment_unlock"
        tools:layout="@layout/fragment_unlock">
        <action
            android:id="@+id/action_unlockFragment_to_galleryFragment"
            app:destination="@id/albumsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/unlockFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_unlockFragment_to_encryptionMigrationFragment"
            app:destination="@id/encryptionMigrationFragment"
            app:popUpTo="@id/unlockFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_unlockFragment_to_albumsFragment"
            app:destination="@id/albumsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/unlockFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.app.galleryx.onboarding.ui.OnBoardingFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onBoardingFragment_to_setupFragment"
            app:destination="@id/setupFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/initialFragment"
        android:name="com.app.galleryx.appstart.ui.InitialFragment"
        android:label="InitialFragment">
        <action
            android:id="@+id/action_initialFragment_to_unlockFragment"
            app:destination="@id/unlockFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/initialFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_initialFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/initialFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_initialFragment_to_setupFragment"
            app:destination="@id/setupFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/initialFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/creditsFragment"
        android:name="com.app.galleryx.settings.ui.credits.CreditsFragment"
        android:label="CreditsFragment" />

    <fragment
        android:id="@+id/ossLicensesFragment"
        android:name="com.app.galleryx.settings.ui.thirdparty.OssLicensesFragment"
        android:label="OssLicensesFragment" />

    <fragment
        android:id="@+id/imageViewerFragment"
        android:name="com.app.galleryx.imageviewer.ui.ImageViewerFragment"
        android:label="ImageViewerFragment">
        <argument
            android:name="photo_uuid"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="album_uuid"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/action_imageViewerFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment"
            app:enterAnim="@anim/slide_to_top"
            app:exitAnim="@anim/slide_to_bottom" />
    </fragment>

    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.app.galleryx.videoplayer.ui.VideoPlayerFragment"
        android:label="VideoPlayerFragment">
        <argument
            android:name="video"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/albumsFragment"
        android:name="com.app.galleryx.gallery.albums.ui.AlbumsFragment"
        android:label="GalleryFragment">
        <action
            android:id="@+id/action_albumsFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.app.galleryx.gallery.albums.detail.ui.AlbumDetailFragment"
        android:label="AlbumDetailFragment">
        <argument
            android:name="album_uuid"
            android:defaultValue=""
            app:argType="string" />
    </fragment>

    <action
        android:id="@+id/action_global_imageViewerFragment"
        app:destination="@id/imageViewerFragment"
        app:enterAnim="@anim/slide_to_top"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@anim/slide_to_bottom" />

    <action
        android:id="@+id/action_global_albumDetailFragment"
        app:destination="@id/albumDetailFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <fragment
        android:id="@+id/encryptionMigrationFragment"
        android:name="com.app.galleryx.security.migration.ui.EncryptionMigrationFragment"
        android:label="EncryptionMigrationFragment" >
        <action
            android:id="@+id/action_encryptionMigrationFragment_to_galleryFragment"
            app:destination="@id/albumsFragment"
            app:popUpTo="@id/encryptionMigrationFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>