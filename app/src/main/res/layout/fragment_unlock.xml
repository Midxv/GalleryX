<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".unlock.ui.UnlockFragment">

    <data>
        <variable
            name="viewModel"
            type="com.app.galleryx.unlock.ui.UnlockViewModel" />

        <variable
            name="context"
            type="com.app.galleryx.unlock.ui.UnlockFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_lock"
                app:tint="@android:color/white"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_launcher_name"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="40dp"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_login_card"
                android:elevation="12dp"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unlock_title"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"/>

                <com.app.galleryx.uicomponnets.PasswordEditText
                    android:id="@+id/unlockPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:PasswordEditTextHint="@string/unlock_enter_password"
                    app:textValue="@={viewModel.password}" />

                <TextView
                    android:id="@+id/unlockWrongPasswordWarningTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp"
                    android:text="@string/unlock_wrong_password"
                    android:textColor="@color/darkRed"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/unlockButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:onClick="@{() -> viewModel.unlock()}"
                    android:text="@string/unlock_button"
                    android:backgroundTint="#6200EE"
                    android:textColor="@color/colorComplementary"
                    android:visibility="visible"
                    style="@style/Widget.MaterialComponents.Button"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/unlockUseBiometricUnlockButton"
            android:onClick="@{() -> context.launchBiometricUnlock(0L)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/biometric_unlock_hint_button"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/loadingOverlay"
            layout="@layout/loading_overlay" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>